@page "/player/{playerName}"
@model YourNamespace.Pages.PlayerModel

<!DOCTYPE html>
<html>

    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Player Information</title>
    </head>
    
<body>
    <h1>Player Information</h1>
    @if (!string.IsNullOrEmpty(RouteData.Values["playerName"]?.ToString()))
    {
        var playerName = RouteData.Values["playerName"].ToString();

        try
        {
            if (Model.PlayerData != null && Model.PlayerData.Players.Count > 0)
            {
                <p class="membership-info">Membership ID: @Model.PlayerData.Players[0].MembershipId</p>
            }
            else
            {
                <p class="error-message">Player not found or an error occurred while retrieving data.</p>
            }
        }
        catch (Exception ex)
        {
            <p class="error-message">Error: @ex.Message</p>
        }
    }

    }
    else
    {
        <p class="info-message">Player name not provided.</p>
    }
</body>
</html>
<link rel="stylesheet" href="/css/styles.css" />
